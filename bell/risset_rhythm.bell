## legend: after Jean-Claude Risset (1938â€”2016)
$period = 5000;
$N = 6;
$reps = 4;
for $r in 0...($reps - 1) do (
    for $n in 1...$N do (
        $a = exp2($n - 1);
        $b = $a * 2.;
        $x = arithmser($a, $b, null, $b + 1);
        $x = left($x, -1);
        $x = log2($x/$a);
        $gains = (
            0.5 - cos(($x + $n - 1) * pi * 2 / $N) * 0.5
        ) ** 2;
        for $t in $x, $g in $gains do (
            ezsampler(
                f2mc(exp2($n + $t - 1) * 55) 
            ).transcribe(
                @onset ($t + $r) * $period @gain $g
            ) 
        ) 
    ) 
);
compile(@clefs 'ffgg')